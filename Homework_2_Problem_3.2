import numpy as np
import pylab as py

angles = np.array([0, np.pi/4, np.pi/2, np.pi*3/4, np.pi, np.pi*5/4, np.pi*3/2, np.pi*7/4, np.pi*2])

x=2*np.cos(angles)+np.cos(2*angles)

y=2*np.sin(angles)-np.sin(2*angles)

py.plot(x,y)
py.show()



